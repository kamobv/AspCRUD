@model List<AspCRUD.Models.Product>
@{
    ViewBag.Title = "Index";
}

<h3 class="text-info">Products</h3>

<div class="row">
    <div class="col-mg-12">
        <a href="@Url.Action("create","product")" class="btn btn-success btn-sm">New Product</a>
        <table style="margin-top:10px; text-align:center" class="table table-bordered table-striped">
            <thead>
                <tr class="bg-info">
                    <th>
                        Name
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Total Price
                    </th>
                    <th>
                        Category Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Quantity</td>
                        <td>@product.Price</td>
                        <td>@product.TotalPrice</td>
                        <td>@product.Category.Name</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="@Url.Action("details","product",new { productId = product.Id})"><i class="fa-solid fa-eye"></i></a>
                            <a class="btn btn-warning btn-sm" href="@Url.Action("edit","product",new { productId = product.Id})"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a onclick="return confirm('Do you want delete?')" class="btn btn-danger btn-sm" href="@Url.Action("delete","product",new { productId = product.Id})"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

